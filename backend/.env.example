# Backend environment configuration
# Copy this file to .env and update the values for your environment.

TWELVEDATA_API_KEY=your_twelvedata_key
TWELVEDATA_BASE_URL=https://api.twelvedata.com
TWELVEDATA_TIME_SERIES_ENDPOINT=/time_series
TWELVEDATA_DEFAULT_INTERVAL=1h
TWELVEDATA_TIMEZONE=UTC
POLL_LOOKBACK_HOURS=24
POLL_INTERVAL_MS=300000
CHART_CACHE_TTL_MS=300000
SERVER_PORT=3000
CORS_ALLOWED_ORIGINS=http://localhost:5173,https://your-production-site.com
WEBHOOK_SECRET=replace_me
ADMIN_EMAIL=alerts@example.com
APP_USERNAME=admin
APP_PASSWORD=admin

# WhatsApp / CallMeBot alerts
CALLMEBOT_PHONE=
CALLMEBOT_API_KEY=
WHATSAPP_ALERT_ENABLED=0
# Comma or space separated TradingView symbols to watch
WHATSAPP_ALERT_SYMBOLS=OANDA:XAUUSD,OANDA:USDJPY,OANDA:US30
# Legacy single-symbol setting is still supported if you prefer:
# WHATSAPP_ALERT_SYMBOL=OANDA:XAUUSD
WHATSAPP_ALERT_TIMEFRAME=1h
WHATSAPP_POLL_INTERVAL_MS=3600000
WHATSAPP_RETRY_INTERVAL_MS=300000
WHATSAPP_MAX_RETRIES=3

# TradingView defaults
TRADINGVIEW_USERNAME=
TRADINGVIEW_PASSWORD=
TRADINGVIEW_LAYOUT_ID=
TRADINGVIEW_SYMBOL=OANDA:XAUUSD
TRADINGVIEW_INTERVAL=1h
TRADINGVIEW_FETCH_RANGE=180
TRADINGVIEW_SMA_LENGTH=9
TRADINGVIEW_RECENT_COUNT=10
